{% extends "base.html.twig" %}
{% block title %} {{ parent() }}Se connecter {% endblock %}
{% block contenu %}
{% if form.valide is defined %}
    {% if form.valide == true %}
    <div class="container">
    <h1 class="text-danger">Erreur : {{form.message}}</h1>
    <h1>Veuillez réessayer</h1>
    <h1><a href="index.php?page=connexion">Réessayer de se connecter</a></h1>
    </div>
    {% else %}
    <div class="container">
    <h1 class="text-danger">Erreur : {{form.message}}</h1>
    <h1>Veuillez réessayer</h1>
    <h1><a href="index.php?page=connexion">Réessayer de se connecter</a></h1>
    </div>
    {% endif %}
{% else %}
<div class="container rounded border col-lg-6 col-md-9 col-sm-12 mt-3">

<form action="index.php?page=connexion" method="post" enctype="application/x-www-form- urlencoded">
<h1 class="text-center">Se connecter sur SHOP-SHOP</h1>
<p>
<label for="inputEmail" class="mt-2 fw-bold">Email : </label>
<input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>

<label for="inputPassword" class="mt-2 fw-bold">Mot de passe :</label>
<input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>
<div class="text-center d-grid gap-2"><button type="submit" class="btn btn-primary btn-lg mt-2 mb-2" name="btConnecter">Se connecter</button></div>
</p>
</form>

</div>
{% endif %}
{% endblock %}